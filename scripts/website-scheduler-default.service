[Unit]
Description=Website messenger-consume scheduler_default
After=network.target

[Service]
Type=simple
WorkingDirectory=/path/to/your/app
ExecStart=/path/to/php /path/to/your/app/bin/console messenger:consume scheduler_default -vv --limit=5
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target