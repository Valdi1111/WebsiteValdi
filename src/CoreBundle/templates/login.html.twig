{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
    <main class="vh-100 container d-flex flex-column flex-lg-row align-items-center justify-content-center">
        <div class="mt-3 mt-lg-0 col-12 col-md-9 col-lg-6 col-xl-6">
            <img class="img-fluid w-100 h-auto" src="{{ asset('build/images/core-login.svg') }}" alt="Login image"/>
        </div>
        <div class="mt-3 mt-lg-0 col-12 col-md-9 col-lg-6 col-xl-5 offset-xl-1">
            <form action="{{ path('core_login') }}" method="post">
                <div class="form-floating mb-2">
                    <input type="email" id="email" class="form-control form-control-lg" required
                           autocomplete="username" name="_username"/>
                    <label for="email">Email address</label>
                    <div class="invalid-feedback">Please insert a valid email.</div>
                </div>
                <div class="form-floating mb-2">
                    <input type="password" id="password" class="form-control form-control-lg" placeholder="Password"
                           minlength="8" required autocomplete="current-password" name="_password"/>
                    <label for="password">Password</label>
                    <div class="invalid-feedback">Please insert a valid password.</div>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" checked/>
                        <label class="form-check-label" for="remember_me">Remember me</label>
                    </div>
                </div>
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Sign in</button>
                {% if error %}
                    <div class="alert alert-danger mt-2" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="d-flex align-items-center my-4">
                    <hr class="border flex-grow-1"/>
                    <p class="fw-bold mx-3 mb-0">OR</p>
                    <hr class="border flex-grow-1"/>
                </div>
                <div class="d-flex justify-content-around align-items-center">
                    <button type="button" class="btn btn-social" style="color: #dd4b39;">
                        <i class="fa-brands fa-google"></i>
                    </button>
                    <button type="button" class="btn btn-social" style="color: #3B5998;">
                        <i class="fa-brands fa-facebook"></i>
                    </button>
                    <button type="button" class="btn btn-social" style="color: #55ACEE;">
                        <i class="fa-brands fa-twitter"></i>
                    </button>
                </div>
            </form>
        </div>
    </main>
{% endblock %}